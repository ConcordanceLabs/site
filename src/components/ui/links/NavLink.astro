---
const { url, name } = Astro.props

interface Props {
  url: string
  name: string
}
---

<a
  id={url === '/' ? 'home' : url.replace('/', '')}
  href={url}
  data-astro-prefetch
  class='text-base font-medium text-neutral-600 outline-none ring-zinc-500  focus-visible:ring dark:text-neutral-400 dark:ring-zinc-200 dark:focus:outline-none md:text-sm 2xl:text-base co-highlight'
>
  {name}
</a>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const url = window.location.pathname.replace('//', '')
    let navId = 'home'

    if (url !== '/') {
      navId = url.replace('/', '')
    }

    const nav = document.getElementById(navId)
    if (nav) {
      nav.classList.remove(
        'text-neutral-600',
        'dark:text-neutral-400',
      )
      nav.classList.add('dark:text-white')
      nav.setAttribute('aria-current', 'page')
    }
  })
</script>
